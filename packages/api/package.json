{
  "name": "abstractest",
  "version": "0.0.0",
  "description": "Abstract testing processor",
  "type": "module",
  "main": "./target/cjs/index.cjs",
  "exports": {
    ".": {
      "types": "./target/dts/index.d.ts",
      "require": "./target/cjs/index.cjs",
      "import": "./target/esm/index.mjs",
      "default": "./target/esm/index.mjs"
    }
  },
  "types": "./target/dts/index.d.ts",
  "module": "./target/esm/index.mjs",
  "files": [
    "target/cjs",
    "target/esm",
    "target/dts"
  ],
  "scripts": {
    "build": "concurrently 'npm:build:*'",
    "build:esm": "node src/scripts/build.cjs",
    "build:cjs": "node src/scripts/build.cjs --cjs",
    "build:dts": "tsc --emitDeclarationOnly --skipLibCheck --outDir target/dts",
    "_build:docs": "typedoc --options src/main/typedoc",
    "test": "concurrently 'npm:test:*'",
    "test:lint": "eslint -c src/test/lint/.eslintrc.json src",
    "test:unit": "c8 -r lcov -r text -o target/coverage -x src/scripts -x src/test -x target node --loader ts-node/esm --experimental-specifier-resolution=node --experimental-vm-modules src/scripts/test.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antongolub/abstractest.git"
  },
  "author": "Anton Golub <antongolub@antongolub.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antongolub/abstractest/issues"
  },
  "keywords": [
    "expect",
    "describe",
    "it",
    "test",
    "astract"
  ],
  "homepage": "https://github.com/antongolub/abstractest#readme",
  "dependencies": {
    "tempy": "^3.0.0"
  },
  "devDependencies": {
    "@abstractest/infra": "workspace:*",
    "@types/node": "^20.1.4",
    "fast-glob": "^3.2.12",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1"
  }
}
